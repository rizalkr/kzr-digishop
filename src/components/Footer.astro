<style>
	.footer {
		background: linear-gradient(135deg, var(--primary-bg) 0%, var(--secondary-bg) 100%);
		border-top: 1px solid var(--card-border);
		position: relative;
		overflow: hidden;
	}

	.footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, transparent, var(--accent-green), transparent);
		opacity: 0.6;
	}

	.footer-content {
		padding: 4rem 0 2rem;
	}

	.footer-grid {
		display: grid;
		grid-template-columns: 2fr repeat(4, 1fr);
		gap: 3rem;
		margin-bottom: 3rem;
	}

	.footer-section {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	/* Logo and Company Info */
	.footer-logo {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 1rem;
	}

	.logo-text {
		font-family: var(--font-display);
		font-size: 1.8rem;
		font-weight: 800;
		letter-spacing: -0.02em;
	}

	.logo-subtitle {
		font-size: 0.9rem;
		font-weight: 500;
		color: var(--text-secondary);
		letter-spacing: 0.1em;
	}

	.footer-description {
		color: var(--text-secondary);
		line-height: 1.6;
		max-width: 300px;
	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-link {
		width: 40px;
		height: 40px;
		background: rgba(50, 205, 50, 0.1);
		border: 1px solid rgba(50, 205, 50, 0.3);
		border-radius: 8px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--text-secondary);
		transition: all 0.3s ease;
		text-decoration: none;
	}

	.social-link:hover {
		background: rgba(50, 205, 50, 0.2);
		border-color: var(--accent-green);
		color: var(--accent-green);
		box-shadow: var(--glow-green);
		transform: translateY(-2px);
	}

	/* Footer Sections */
	.footer-title {
		font-family: var(--font-display);
		font-size: 1.1rem;
		font-weight: 600;
		color: var(--text-primary);
		margin-bottom: 0.5rem;
	}

	.footer-links {
		list-style: none;
		padding: 0;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.footer-link {
		color: var(--text-secondary);
		text-decoration: none;
		transition: color 0.3s ease;
		position: relative;
	}

	.footer-link:hover {
		color: var(--accent-green);
	}

	.footer-link::after {
		content: '';
		position: absolute;
		bottom: -2px;
		left: 0;
		width: 0;
		height: 1px;
		background: var(--accent-green);
		transition: width 0.3s ease;
	}

	.footer-link:hover::after {
		width: 100%;
	}

	/* Newsletter */
	.newsletter-description {
		color: var(--text-secondary);
		line-height: 1.5;
		font-size: 0.95rem;
	}

	.newsletter-form {
		width: 100%;
	}

	.form-group {
		display: flex;
		gap: 0.5rem;
	}

	.newsletter-input {
		flex: 1;
		padding: 0.75rem 1rem;
		background: rgba(255, 255, 255, 0.05);
		border: 1px solid var(--card-border);
		border-radius: 8px;
		color: var(--text-primary);
		font-size: 0.9rem;
		transition: all 0.3s ease;
	}

	.newsletter-input:focus {
		outline: none;
		border-color: var(--accent-green);
		box-shadow: 0 0 0 2px rgba(50, 205, 50, 0.2);
	}

	.newsletter-input::placeholder {
		color: var(--text-tertiary);
	}

	.newsletter-btn {
		flex-shrink: 0;
		padding: 0.75rem 1.5rem;
		font-size: 0.9rem;
	}

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        color: aliceblue; /* Warna ini akan diwarisi oleh link */
    }

    /* TAMBAHKAN ATURAN BARU INI */
    .contact-info a {
        color: inherit;
        text-decoration: none;
        /* Opsional: Tambahkan transisi untuk efek hover yang mulus */
        transition: color 0.3s ease;
    }

    .contact-info a:hover {
        color: var(--accent-green);
    }
	.contact-item {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		color: var(--text-secondary);
		font-size: 0.9rem;
	}

	.contact-item svg {
		flex-shrink: 0;
		opacity: 0.7;
	}

	/* Footer Bottom */
	.footer-bottom {
		border-top: 1px solid var(--card-border);
		padding: 1.5rem 0;
	}

	.footer-bottom-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.footer-bottom-left p {
		color: var(--text-tertiary);
		font-size: 0.9rem;
	}

	.footer-bottom-links {
		display: flex;
		gap: 2rem;
		flex-wrap: wrap;
	}

	.footer-bottom-link {
		color: var(--text-tertiary);
		text-decoration: none;
		font-size: 0.9rem;
		transition: color 0.3s ease;
	}

	.footer-bottom-link:hover {
		color: var(--accent-green);
	}

	/* Responsive Design */
	@media (max-width: 1024px) {
		.footer-grid {
			grid-template-columns: 1fr 1fr 1fr;
			gap: 2rem;
		}

		.footer-section:first-child {
			grid-column: 1 / -1;
			max-width: none;
		}
	}

	@media (max-width: 768px) {
		.footer-content {
			padding: 3rem 0 1.5rem;
		}

		.footer-grid {
			grid-template-columns: 1fr 1fr;
			gap: 2rem;
		}

		.footer-section:first-child {
			grid-column: 1 / -1;
		}

		.footer-section:last-child {
			grid-column: 1 / -1;
		}

		.form-group {
			flex-direction: column;
		}

		.newsletter-btn {
			width: 100%;
			justify-content: center;
		}

		.footer-bottom-content {
			flex-direction: column;
			text-align: center;
		}

		.footer-bottom-links {
			justify-content: center;
		}
	}

	@media (max-width: 480px) {
		.footer-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.footer-section:first-child,
		.footer-section:last-child {
			grid-column: auto;
		}

		.social-links {
			justify-content: center;
		}

		.footer-bottom-links {
			flex-direction: column;
			gap: 1rem;
		}
	}
</style>

<script>
	// Newsletter form submission
	document.addEventListener('DOMContentLoaded', function() {
		const newsletterForm = document.querySelector('.newsletter-form');
		
		if (newsletterForm) {
			newsletterForm.addEventListener('submit', function(this: HTMLFormElement, e: Event) {
				e.preventDefault();
				const emailInput = this.querySelector('.newsletter-input') as HTMLInputElement;
				const email = emailInput?.value;
				
				if (email) {
					// Simulate newsletter subscription
					const button = this.querySelector('.newsletter-btn') as HTMLButtonElement;
					const originalText = button.innerHTML;
					
					button.innerHTML = 'Subscribing...';
					button.disabled = true;
					
					setTimeout(() => {
						button.innerHTML = 'âœ“ Subscribed!';
						setTimeout(() => {
							button.innerHTML = originalText;
							button.disabled = false;
							if (emailInput) emailInput.value = '';
						}, 2000);
					}, 1000);
				}
			});
		}
	});
</script>
