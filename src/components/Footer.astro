<script>
	// Newsletter form submission
	document.addEventListener('DOMContentLoaded', function() {
		const newsletterForm = document.querySelector('.newsletter-form');
		
		if (newsletterForm) {
			newsletterForm.addEventListener('submit', function(this: HTMLFormElement, e: Event) {
				e.preventDefault();
				const emailInput = this.querySelector('.newsletter-input') as HTMLInputElement;
				const email = emailInput?.value;
				
				if (email) {
					// Simulate newsletter subscription
					const button = this.querySelector('.newsletter-btn') as HTMLButtonElement;
					const originalText = button.innerHTML;
					
					button.innerHTML = 'Subscribing...';
					button.disabled = true;
					
					setTimeout(() => {
						button.innerHTML = 'âœ“ Subscribed!';
						setTimeout(() => {
							button.innerHTML = originalText;
							button.disabled = false;
							if (emailInput) emailInput.value = '';
						}, 2000);
					}, 1000);
				}
			});
		}
	});
</script>
